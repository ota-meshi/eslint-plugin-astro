{
  "compilerOptions": {
    "target": "es2020",
    "module": "preserve",
    "moduleResolution": "Bundler",
    "lib": ["es2020", "dom"],
    // "allowJs": false,
    // "checkJs": false,
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,

    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    // "paths": {
    //     "*": ["typings/*"]
    // },
    "esModuleInterop": true,
    "outDir": "lib",
    "paths": {
      "@eslint-community/*": ["typings/@eslint-community/*"]
    },

    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,

    "isolatedDeclarations": true
  },
  "include": [
    "src/**/*",
    "tests/src/**/*",
    "tests/integration/**/*",
    "tests/utils/**/*",
    "tests/typing.test.ts",
    "tools/**/*",
    "docs-build/src/**/*.ts",
    "docs-build/src/**/*.astro",
    "docs-build/src/**/*.svelte",
    "docs/**/*.astro",
    "typings/**/*",
    "tsdown.config.ts"
  ],
  "exclude": ["lib/**/*", "tests/fixtures/**/*"]
}
